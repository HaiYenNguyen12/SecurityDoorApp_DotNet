@model Security_Door_App.MVC.Models.FormModel

@{
    Layout = null;
}
@{
    ViewData["Title"] = "Door Security Form";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .myform {
            border: 2px outset black;
            background-color: white;
            text-align: center;
            font-family: Arial;
        }

        .myforma {
            font-size: large;
        }

    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
</head>
<body>
    <div class="myform">
        <h1 class="display-4">@ViewData["Title"]</h1>

        <form asp-action="result" method="post">
            <div class="myforma">
                <label asp-for="CardUniqueNumber" class="">Card:</label>
                <input asp-for="CardUniqueNumber" />
            </div>
            <div class="myforma">
                <label asp-for="DoorReaderSerialNumber">Door:</label>
                <input asp-for="DoorReaderSerialNumber" />
            </div>
            <div>
                <p></p>
                <button type="submit">Submit form</button>
                <p></p>
            </div>

        </form>
    </div>

</body>
</html>

